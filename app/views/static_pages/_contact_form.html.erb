<%= bootstrap_form_for @contact  do |f| %> 
  <div class="php-email-form">
  <div class="row">
  <div class="col-md-6 form-group">
  <%= f.text_field :name, placeholder: "Your Name", skip_label: true, required: true %>
  </div>
  <div class="col-md-6 form-group">
  <%= f.email_field :email, placeholder: "Your Email", skip_label: true, required: true %>
  </div>
  </div>

  <div class="form-group mt-3">
  <%= f.text_field :subject, placeholder: "Subject", skip_label: true, required: true %>
  </div>
  <div class="form-group mt-3">
  <%= f.text_area :message, class: "form-control", rows:"5", placeholder: "Message", skip_label: true, required: true %>
  </div>
  <div class="mt-3 text-center">
  <%= f.primary "Send Message", class: "btn btn-primary"   %>
  </div>
  </div>
<% end %>

